<div class="container mx-auto flex justify-center items-center">
  <div class="bg-white shadow-md rounded-lg p-6 w-full">
    <%= form_with(model: customer_supplier, class: "space-y-4") do |form| %>
      <% if customer_supplier.errors.any? %>
        <div class="text-red-500">
          <h2><%= pluralize(customer_supplier.errors.count, "error") %> prohibited this customer_supplier from being saved:</h2>

          <ul>
            <% customer_supplier.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>


      <div class="flex space-x-4">
        <div class="w-1/3">
          <%= form.label :sector, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :sector, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div class="w-1/3">
          <%= form.label :passenger_name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :passenger_name, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div class="w-1/3">
          <%= form.label :reservation_num, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :reservation_num, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>
      <div class="flex space-x-4">
      <div class="w-1/3">
        <%= form.label :reservation_type, class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :reservation_type, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="w-1/3">
        <%= form.label :supplier, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :supplier, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="w-1/3">
        <%= form.label :air_line, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :air_line, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>

    <div class="flex space-x-4">
      <div class="w-1/3">
        <%= form.label :travel_date, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :travel_date, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="w-1/3">
        <%= form.label :current_date, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :current_date, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="w-1/3">
        <%= form.label :ref_date, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :ref_date, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
  <div class="flex space-x-4">
    <div class="w-1/3">
        <%= form.label :deal, class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :deal, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="w-1/3">
        <%= form.label :sale, class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :sale, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="w-1/3">
        <%= form.label :purchase, class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :purchase, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
    
    <div class="flex justify-center">
      <div class="w-1/3">
        <%= form.label :customer, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :customer, class: "mt-1 p-2 w-full border rounded-md focus:ring focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>

      <div class="flex justify-center">
        <%= form.submit "Create", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
