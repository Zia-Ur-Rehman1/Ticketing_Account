<div class="flex justify-between px-6 py-3">
<strong>Customer: <%= @name%></strong>
  <strong>Total Balance: <%= @total_balance %></strong>
</div>
<div class="relative overflow-x-auto shadow-md sm:rounded-lg mx-2">
  <table class=" w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
              <th class="px-6 py-3">Sector</th>
              <th class="px-6 py-3">Passenger Name</th>
              <th class="px-6 py-3">Reservation Num</th>
              <th class="px-6 py-3">Supplier</th>
              <th class="px-6 py-3">Air Line</th>
              <th class="px-6 py-3">Travel Date</th>
              <th class="px-6 py-3">Deal</th>
              <th class="px-6 py-3">Sale</th>
              <th class="px-6 py-3">Purchase</th>
              <th class="px-6 py-3">Customer</th>
              <th class="px-6 py-3">Action</th>
          </tr>
      </thead>
      <tbody>
        <% @customer.each do |customer_supplier| %>
        <%= render customer_supplier %>
    <% end %>
</tbody>
</table>
